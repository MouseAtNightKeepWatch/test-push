.spin
  animation quasar-spin 2s infinite linear
.blink
  animation quasar-blink 1s steps(5, start) infinite
.rotate-45
  transform rotate(45deg)
.rotate-90
  transform rotate(90deg)
.rotate-135
  transform rotate(135deg)
.rotate-180
  transform rotate(180deg)
.rotate-205
  transform rotate(205deg)
.rotate-270
  transform rotate(270deg)
.flip-horizontal
  transform scale(-1, 1)
.flip-vertical
  transform scale(1, -1)
.transition-generic
  transition all .3s

@keyframes quasar-blink
  to
    visibility hidden

@keyframes quasar-spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(359deg)

@keyframes quasar-pop-in
  0%
    opacity 0
    transform scale(.7)
  70%
    opacity 1
    transform scale(1.07)
  100%
    transform scale(1)

@keyframes quasar-scale-in
  0%
    opacity 0
    transform scale(.7)
  100%
    opacity 1
    transform scale(1)
